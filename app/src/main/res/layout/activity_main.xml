<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <com.jjlf.jjkit_badge.JJBadge
            android:id="@+id/JJBadge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            app:b_strokeColor="@android:color/black"
            app:b_font="@font/josefinsans_regularitalic"
            app:b_text="19"
            app:b_textColor="@android:color/white"
            app:b_strokeWidth="7dp"
            app:b_textSize="20dp"
            app:clBottomToBottomParent="true"
            app:clCenterInParentHorizontally="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="150dp" />


        <com.jjlf.jjkit_badge.JJImageBadge
            android:id="@+id/JJImageBadge"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            app:clCenterInParentHorizontally="true"
            app:clTopToTopParent="true"
            app:ib_alignment="center_top_right"
           app:ib_font="@font/josefinsans_regularitalic"
            app:ib_backgroundColor="@color/colorAccent"
            app:ib_offsetX="-5dp"
            app:ib_text="99+"
            app:ib_textColor="@android:color/white"
            app:ib_textSize="12dp"
            app:srcCompat="@drawable/trump"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="40dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>